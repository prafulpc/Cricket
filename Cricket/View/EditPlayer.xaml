        <Label Content="Teams" HorizontalAlignment="Left" Margin="24,22,0,0" VerticalAlignment="Top" Width="48"/>
        <ListBox  x:Name="lbxTeams" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="347" Margin="24,85,0,0" VerticalAlignment="Top" Width="289"/>
