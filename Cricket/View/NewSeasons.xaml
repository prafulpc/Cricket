<UserControl x:Class="Cricket.View.NewSeasons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Label Content="Season Type" HorizontalAlignment="Left" Margin="21,22,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_seasons" HorizontalAlignment="Left" Height="23" Margin="101,19,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button  x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="41,91,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="146,91,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</UserControl>
